<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSemester1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Семестр 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <ListView
        android:id="@+id/listViewSemester1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textViewSemester2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Семестр 2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <ListView
        android:id="@+id/listViewSemester2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSemester1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Семестр 1" />

        <Button
            android:id="@+id/btnSemester2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Семестр 2" />

    </LinearLayout>

</LinearLayout>
